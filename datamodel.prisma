enum UserType {
    ADMIN
    GUEST
}

type User {
    id: ID! @id
    type: UserType! @default(value: ADMIN)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    email: String! @unique
    name: String!
    passwordHash: String!
}

type Session {
    id: ID! @id
    createdAt: DateTime! @createdAt
    user: User!
}

type BlogPost {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    slug: String! @unique
    published: Boolean!
    image: String!
    title: String!
    date: DateTime!
    author: User!
    content: String!
    tags: String!
    views: Int!
}

type Project {
    id: ID! @id
    priority: Int!
    name: String!
    link: String!
    icon: String!
    description: String!
    retired: Boolean!
    revenue: String!
    reason: String
}

type FavoriteThing {
    id: ID! @id
    priority: Int!
    name: String!
    link: String!
    description: String!
}

type Book {
    id: ID! @id
    title: String!
    author: String!
    rank: Int
    link: String
}

type Subscriber {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    email: String! @unique
    name: String!
    unsubscribed: Boolean!
}

type NewsletterSend {
    id: ID! @id
    key: String! @unique
    createdAt: DateTime! @createdAt
    recipients: Int!
    description: String!
}

type AnalyticsPageView {
    id: ID! @id
    time: DateTime! @createdAt
    sess: String!
    user: String!
    userAgent: String!
    path: String!
    search: String!
    referrer: String!
    age: Int!
    page: Int!
    ip: String!
}
