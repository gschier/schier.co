enum UserType {
    ADMIN
    GUEST
}

type User {
    id: ID! @id
    type: UserType! @default(value: ADMIN)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    email: String! @unique
    name: String!
    passwordHash: String!
}

type Session {
    id: ID! @id
    createdAt: DateTime! @createdAt
    user: User!
}

type BlogPost {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    published: Boolean!
    deleted: Boolean!
    slug: String! @unique
    title: String!
    date: DateTime!
    author: User!
    content: String!
    renderedContent: String!
    tags: String!
}
