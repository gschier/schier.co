{
  "private": true,
  "name": "schier.dev",
  "version": "1.0.0",
  "scripts": {
    "frontend:watch": "rm -rf ./static && parcel watch --global schier --out-dir ./static --public-url /static/ editor.js index.js",
    "frontend:build": "rm -rf ./static && parcel build --global schier --no-source-maps --out-dir ./static editor.js index.js",
    "format-code": "prettier --write **/*.js **/*.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-code"
    }
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "images",
        "staticOutDir": "images"
      },
      {
        "staticPath": "dictionaries",
        "staticOutDir": "dictionaries"
      },
      {
        "staticPath": "favicon",
        "staticOutDir": "favicon"
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "prisma": "^1.34.10",
    "tailwindcss": "^1.4.6"
  },
  "dependencies": {
    "codemirror": "^5.54.0",
    "codemirror-typo": "^1.0.1",
    "vue": "^2.6.11"
  }
}
