{
  "private": true,
  "name": "schier.dev",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p frontend:watch backend:run",
    "backend:run": "docker-compose up web",
    "frontend:watch": "rm -rf ./backend/static && parcel watch --global schier --out-dir ./backend/static --public-url /static/ frontend/editor.js frontend/index.js",
    "frontend:build": "rm -rf ./backend/static && parcel build --global schier --no-source-maps --out-dir ./backend/static frontend/editor.js frontend/index.js",
    "fixtures": "docker-compose run web go run github.com/gschier/schier.dev/cmd/fixtures",
    "deploy": "primsa deploy --force",
    "format-code": "prettier --write frontend/**/*.js frontend/**/*.css",
    "manage": "docker-compose run web go run github.com/gschier/schier.dev/cmd/manage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-code"
    }
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "frontend/images",
        "staticOutDir": "images"
      },
      {
        "staticPath": "frontend/dictionaries",
        "staticOutDir": "dictionaries"
      },
      {
        "staticPath": "frontend/favicon",
        "staticOutDir": "favicon"
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "prisma": "^1.34.10",
    "tailwindcss": "^1.4.6"
  },
  "dependencies": {
    "codemirror": "^5.54.0",
    "codemirror-typo": "^1.0.1",
    "vue": "^2.6.11"
  }
}
