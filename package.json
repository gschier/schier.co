{
  "private": true,
  "name": "schier.dev",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p frontend:watch backend:run",
    "backend:run": "docker-compose up web",
    "frontend:watch": "parcel watch --out-dir ./static/build --public-url /static/build/ ./src/index.js",
    "frontend:build": "parcel build --no-source-maps --out-dir ./static/build --public-url /static/build/ ./src/index.js",
    "deploy": "primsa deploy --force",
    "format-code": "prettier --write src/**/*.js src/**/*.css"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "src/images",
        "staticOutDir": "images"
      }
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "husky": "^3.0.9",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "tailwindcss": "^1.1.3"
  },
  "dependencies": {
    "vue": "^2.6.10"
  }
}
