{
  "private": true,
  "name": "schier.dev",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p frontend:watch backend:run",
    "backend:run": "docker-compose up web",
    "frontend:watch": "rm -rf ./static/build && parcel watch --global schier --out-dir ./static/build --public-url /static/build/ ./src/editor.js ./src/index.js",
    "frontend:build": "rm -rf ./static/build && parcel build --global schier --no-source-maps --out-dir ./static/build ./src/editor.js ./src/index.js",
    "fixtures": "docker-compose run web go run github.com/gschier/schier.dev/cmd/fixtures",
    "deploy": "primsa deploy --force",
    "format-code": "prettier --write src/**/*.js src/**/*.css",
    "manage": "docker-compose run web go run github.com/gschier/schier.dev/cmd/manage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-code && npm run frontend:build"
    }
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "src/images",
        "staticOutDir": "images"
      },
      {
        "staticPath": "src/dictionaries",
        "staticOutDir": "dictionaries"
      },
      {
        "staticPath": "src/favicon",
        "staticOutDir": "favicon"
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "husky": "^3.0.9",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "prisma": "^1.34.10",
    "tailwindcss": "^1.1.4"
  },
  "dependencies": {
    "codemirror": "^5.49.2",
    "codemirror-typo": "^1.0.1",
    "vue": "^2.6.10"
  }
}
