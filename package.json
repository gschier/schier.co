{
  "private": true,
  "name": "schier.dev",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p frontend:watch backend:run",
    "backend:run": "docker-compose up web",
    "frontend:watch": "parcel watch --out-dir ./static/dev --public-url /static/dev/ ./static/index.js",
    "frontend:build": "parcel build --no-source-maps --out-dir ./static/dist --public-url /static/dist/ ./static/index.js",
    "deploy": "primsa deploy --force"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "tailwindcss": "^1.1.3"
  },
  "dependencies": {
    "vue": "^2.6.10"
  }
}
